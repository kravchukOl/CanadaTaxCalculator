<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding = "8dp">

    <TextView
        android:id="@+id/text_view_province_name"
        android:layout_width="wrap_content"
        android:maxWidth="125dp"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_view_flag_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Newfoundland and Labrador"
        tools:ignore="RtlSymmetry" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_flag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="4dp">
        <ImageView
            android:id="@+id/image_view_flag"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:src="@drawable/flag_of_newfoundland_and_labrador"
            android:contentDescription="@string/content_description_flag_image" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>