<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OptionsTextViewWithDrawable" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#303030</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_question_mark_24</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>


    <!-- CardViews styles -->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_corners_top_30</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_corners_top_30" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CardViewStyleCornerRadiusBottom16" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_corners_bottom_16
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_corners_bottom_16" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    
    <style name="RoundedCornerFlagImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
        <item name="color">@color/white</item>
    </style>

</resources>